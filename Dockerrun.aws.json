{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [{
      "name": "client",
      "image": "gudunku/complex-app-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "gudunku/complex-app-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "gudunku/complex-app-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "gudunku/complex-app-nginx",
      "hostname": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [{
        "hostPort": 80,
        "containerPort": 80
      }],
      "links": ["client", "server"]
    }
  ]
}